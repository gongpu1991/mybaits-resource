<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="gongpu.Mapper.UserMapper">
  <select id="selectById" parameterType="map" resultType="gongpu.dao.User">
    select * from user where name = #{name} and id=#{id}
  </select>

  <select id="selectAll" parameterType="map"  resultType="gongpu.dao.User">
    select * from user where id = ${id} and name=#{name}
  </select>

  <select id="selectByIdAndName" parameterType="map" resultType="gongpu.dao.User">
    select * from user where id = ${id} and name=${name}
  </select>
</mapper>

